{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "fight-macros",
  "version": "0.1.0",
  "identifier": "com.alucard.fight-macros",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Fight Macros",
        "width": 800,
        "height": 600,
        "skipTaskbar": false,
        "resizable": true,
        "fullscreen": false,
        "visible": false,
        "center": true
      },
      {
        "label": "splash",
        "url": "../splash.html",
        "width": 800,
        "height": 600,
        "resizable": false,
        "decorations": false,
        "fullscreen": false,
        "transparent": true,
        "center": true,
        "visible": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}